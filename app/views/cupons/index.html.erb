<%- model_class = Cupon -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:precio_normal) %></th>
      <th><%= model_class.human_attribute_name(:precio_dcto) %></th>
      <th><%= model_class.human_attribute_name(:descripcion) %></th>
      <th><%= model_class.human_attribute_name(:validez) %></th>
      <th><%= model_class.human_attribute_name(:stock) %></th>
      <th><%= model_class.human_attribute_name(:empresa_id) %></th>
      <th><%= model_class.human_attribute_name(:foto) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @cupons.each do |cupon| %>
      <tr>
        <td><%= link_to cupon.id, cupon_path(cupon) %></td>
        <td><%= cupon.nombre %></td>
        <td><%= cupon.precio_normal %></td>
        <td><%= cupon.precio_dcto %></td>
        <td><%= cupon.descripcion %></td>
        <td><%= cupon.validez %></td>
        <td><%= cupon.stock %></td>
        <td><%= cupon.empresa_id %></td>
        <td><%= cupon.foto %></td>
        <td><%=l cupon.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_cupon_path(cupon), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      cupon_path(cupon),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_cupon_path,
            :class => 'btn btn-primary' %>
